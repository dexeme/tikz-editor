{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "outDir": "dist",
    "declaration": false,
    "sourceMap": false,
  },
  "include": ["*.ts", "src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
